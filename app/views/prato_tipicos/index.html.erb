<div class="page-header">
<h1  class="text-danger">Pratos t√≠picos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Produtos</th>
      <th>Municipios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prato_tipicos.each do |prato_tipico| %>
      <tr>
        <td><%= prato_tipico.produto.nome %></td>
        <td><%= prato_tipico.municipio.nome %></td>
        <td><%= link_to 'Exibir', prato_tipico %></td>
        <td><%= link_to 'Editar', edit_prato_tipico_path(prato_tipico) %></td>
        <td><%= link_to 'Excluir', prato_tipico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


