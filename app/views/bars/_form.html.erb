<%= form_for @bar, :html => { :class => "form-horizontal bar" } do |f| %>

    <% if @bar.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bar.errors.count, "error") %> prohibited this bar from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bar.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@bar[:name]) %>
  </div>
 <div class="control-group">
     <%= f.label :Imagem, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar, :class => 'form-control' %>
    </div>
    <%= error_span(@bar[:avatar_file_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            bars_path, :class => 'btn btn-default' %>

<% end %>
