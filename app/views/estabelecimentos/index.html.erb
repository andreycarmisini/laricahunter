<%- model_class = Estabelecimento -%>
<p id="notice"><%= notice %></p>
<div class="page-header">
<h1 class="text-danger">Estabelecimentos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr class="table">
      <th>ID - Nome Fantasia</th>
      <th>Endereço</th>
      <th>Bairro</th>
      <th>Fone1</th>
      <th>Hora de abertura</th>
      <th>Hora de fechamento</th>
      <th>Municipio</th>
      <th>ID - Usuario</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estabelecimentos.each do |estabelecimento| %>
      <tr class="table">
        <td><%= estabelecimento.id %> - <%=estabelecimento.nomefantasia %></td>
        <td><%= estabelecimento.logradouro  %> <%= estabelecimento.numero %></td>
        <td><%= estabelecimento.bairro %></td>
        <td><%= estabelecimento.fone1 %></td>
        <td><%= estabelecimento.horaabertura.to_s(:time) %></td>
        <td><%= estabelecimento.horafechamento.to_s(:time) %></td>
        <td><%= estabelecimento.municipio.nome %></td>
        <td><%= estabelecimento.user.id %> - <%= estabelecimento.user.email %></td>
        <td><%= image_tag estabelecimento.avatar.url(:thumb) %></td>
        <td><%= link_to 'Exibir', estabelecimento %></td>
        <td><%= link_to 'Editar', edit_estabelecimento_path(estabelecimento) %></td>
        <td><%= link_to 'Excluir', estabelecimento, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.new")),new_estabelecimento_path,:class => 'btn btn-warning' %>


