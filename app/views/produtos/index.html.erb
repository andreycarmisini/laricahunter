<div class="page-header">
<h1 class="text-danger">Produtos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr class="table">
      <th>Nome</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr class="table">
        <td><%= produto.nome %></td>
        <td><%= produto.categorium.nome %></td>
        <td><%= link_to 'Exibir', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'VocÃª tem certeza ?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

